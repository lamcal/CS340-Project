<html>
<h1> Update {{customer.first_name}} {{customer.last_name}}:</h1>
<form id="update-customer" action="/customer" method = "post">
    First name: <input type="text" name="first_name" value="{{customer.first_name}}" required><br>
    Last name: <input type="text" name="last_name" value="{{customer.last_name}}" required><br>
    Email: <input type="email" name="email" value="{{customer.email}}" required><br>
    Password: <input type="password" name="password" value="{{customer.password}}" required><br>
    Address 1: <input type="text" name="address_1" value="{{customer.address_1}}" required><br>
    Address 2: <input type="text" name="address_2" value="{{customer.address_2}}"><br>
    City: <input type="text" name="city" value="{{customer.city}}" required><br>
    State: <input type="text" name="state" value="{{customer.state}}" required maxlength="2"><br>
    Zip: <input type="number" name="zip_code" value="{{customer.zip_code}}" required min="10000" max="99999"><br>
</form>
<button onclick="updateCustomer({{customer.id}})">Update</button>
<script type="text/javascript">
    
    function updateCustomer(id){
        $.ajax({
            url: '/customer/' + id,
            type: 'PUT',
            data: $('#update-customer').serialize(),
            success: function(result){
                window.location.replace("./");
            }
        })
    };
</script>
</html>