<html>
<h1> Update Order#{{order.order_id}}:</h1>
<form id="update-order" action="/order" method = "post">
    Customer ID: <input type="number" name="customer_id" value="{{order.customer_id}}"><br>
    Order Placed: <input type="date" name="order_placed" value="{{order.order_placed}}"><br>
    Total Due: <input type="number" step="0.01" name="total_due" value="{{order.total_due}}"><br>
    Payment Method: 
        <input type="radio" name="payment_method" id="paypal" maxlength="100" value="FALSE">
        <label for="paypal">PayPal</label>
        <input type="radio" name="payment_method" id="credit_card" maxlength="100" value="TRUE">
        <label for="credit_card">Credit Card</label><br>
</form>
<button onclick="updateOrder({{order.id}})">Update</button>
<script type="text/javascript">
    
    function updateOrder(id){
        $.ajax({
            url: '/order/' + id,
            type: 'PUT',
            data: $('#update-order').serialize(),
            success: function(result){
                window.location.replace("./");
            }
        })
    };
</script>
</html>